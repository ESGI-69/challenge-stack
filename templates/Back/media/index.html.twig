{% extends 'base_back.html.twig' %}

{% block title %}BeatHub | Medias{% endblock %}

{% block body %}
    <h1>My Medias</h1>
    {% if artistLinked %}
      <div class="container-table">
        <table class="table table--medias">
            <thead>
                <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Description</th>
                    <th scope="col">Duree</th>
                    <th scope="col">Image</th>
                    <th scope="col">Present on</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
            {% for media in medias %}
              {% include '/Back/media/mediaRow.html.twig' with { media } %}
            {% else %}
                <tr>
                    <td class="text-center">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
      </div>
    {% else %}
      <p>You must be linked to an artist to add medias</p>
    {% endif %}

    <a href="{{ path('admin_app_media_new') }}">Create new</a>
{% endblock %}
