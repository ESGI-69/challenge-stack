{# table row #}
<tr>
  <td class="text-center">{{ post.Id }}</td>
  <td class="text-center">{{ post.IdArtist.Pseudo }}</td>
  <td class="text-center">{{ post.Title }}</td>
  <td class="text-center">{{ post.TextContent }}</td>
  <td class="text-center">{{ post.CreatedAt|date() }}</td>
  <td class="text-center">{{ post.UpdatedAt|date() }}</td>
  {% if post.ValidatedAt == null %}
    <td class="text-center">Non valid√©</td>
  {% else %}
    <td class="text-center">{{ post.ValidatedAt|date() }}</td>
  {% endif %}
  {% if validation %}
    <td class="text-center">
      <a href="{{ path('admin_app_post_validate', {'id': post.id}) }}" class="btn btn-primary">Validate</a>
      {{ include('back/post/_delete_form_validation.html.twig') }}
    </td>
  {% else %}
    <td class="text-center">
      <a href="{{ path('admin_app_post_edit', {'id': post.id}) }}" class="btn btn-primary">Edit</a>
      {{ include('back/post/_delete_form.html.twig') }}
    </td>
  {% endif %}
</tr>