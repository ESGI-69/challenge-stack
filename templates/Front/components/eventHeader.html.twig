<div class="event-header">
  <img src="{{ event.PicturePath is null ? asset('build/data-files/event-pictures/placeholder-image.webp') : asset(event.PicturePath) }}">
  <div class="event-header__content">
    <span class="event-header__content__type">Event</span>
    <div class="event-header__content__name">
      <h1 class="event-header__content__name__text">
        {{ event.title }}
      </h1>
    </div>
    <p>{{ event.description }}</p>
    <div class="event-header__content__info">
      {% if 1 is not null %}
        <span class="event-header__content__info__icons" style="white-space: nowrap">
          {% include '/icons/warehouse.html.twig' %} Venue <b>{{ event.getidconcerthall.name }}</b>
        </span>
      {% endif %}

      {% if 1 is not null %}
        <span class="club-header__content__info__icons" style="white-space: nowrap">
          {% include '/icons/warehouse.html.twig' %} Date <b>{{ event.startdate|date("D M j") }}</b>
        </span>
      {% endif %}

        {% if 1 is not null %}
        <span class="club-header__content__info__icons" style="white-space: nowrap">
          {% include '/icons/warehouse.html.twig' %} Attending todo <b>{{ event.getidconcerthall.capacity }}</b>
        </span>
      {% endif %}
       <a class="button button-type--outline button-color--white">
        Interested
      </a>

      <a class="button button-type--outline button-color--white" style="white-space: nowrap">
        Buy tickets
      </a>
     
    </div>
  </div>
</div>