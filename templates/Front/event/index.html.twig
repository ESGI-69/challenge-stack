{% extends 'base_front.html.twig' %}

{% block title %}Hello EventsController!{% endblock %}

{% block body %}

{% include '/Front/components/section.html.twig' with {name: 'Tonight'} %}
<div class="events-list">
{% for event in events %}
{{ dump(event)}}
  {% include '/Front/components/eventRow.html.twig'
    with {
      eventImagePath: event.picturepath | default('build/images/logo.svg'),
      eventSlug: 'event-test-slug',
      eventName: event.title,
      eventId : event.id,
      eventDate: event.startdate|date("D M j"),
      eventClubSlug: 'test',
      eventClubName: 'test',
      eventClubCity: 'test'
    }
  %}
{% endfor %}
</div>

{% include '/Front/components/section.html.twig' with {name: 'Tomorow'} %}
<div class="events-list">
{% include '/Front/components/eventRow.html.twig'
  with {
    eventImagePath: 'build/images/logo.svg',
    eventSlug: '012-label-night',
    eventName: '012 Label Nigh',
    eventId : '1',
    eventDate: 'Fri, Feb 3, 22:00',
    eventClubSlug: 'ohm',
    eventClubName: 'OHM',
    eventClubCity: 'Berlin',
  }
%}
</div>
{% endblock %}
